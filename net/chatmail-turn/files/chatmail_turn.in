#!/bin/sh

# PROVIDE: chatmail_turn
# REQUIRE: DAEMON FILESYSTEMS devfs
# BEFORE:  LOGIN
# KEYWORD: shutdown
#
. /etc/rc.subr

name=chatmail_turn
rcvar=chatmail_turn_enable

load_rc_config $name

: ${chatmail_turn_enable:=NO}
: ${chatmail_turn_realm:="$(/bin/hostname -f)"}
: ${chatmail_turn_socket:="/var/run/chatmail-turn.socket"}

pidfile="/var/run/${name}.pid"
command="/usr/sbin/daemon"
command_args="-T ${name} -P ${pidfile} -r -f -H %%PREFIX%%/bin/chatmail-turn --realm ${chatmail_turn_realm} --socket ${chatmail_turn_socket}"
start_precmd="rm -f ${chatmail_turn_socket}"

run_rc_command "$1"
